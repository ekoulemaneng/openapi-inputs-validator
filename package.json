{
  "name": "openapi-io-validator",
  "version": "1.0.0",
  "description": "TypeScript library providing inputs and outputs data validators in accordance with a given OpenAPI specification. For 3.1.x and 3.0.x OpenAPI versions.",
  "keywords": [
    "openapi 3.x",
    "typescript",
    "resquest inputs validation",
    "output response validation",
    "data validation"
  ],
  "author": "ekoulemaneng <ekoulemaneng@gmail.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "src/index.ts",
  "files": [
    "README.md",
    "package.json",
    "dist"
  ],
  "scripts": {
    "start:dev": "nodemon ./src/index.ts --exec \"ts-node ./src/index.ts\"",
    "test": "mocha",
    "test-watch": "mocha --watch",
    "build": "tsc"
  },
  "dependencies": {
    "@stoplight/json-ref-resolver": "^3.1.5",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "yaml": "^2.2.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "openapi-objects-types": "^1.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "mocha": {
    "loader": "ts-node/esm",
    "extensions": [
      "ts",
      "tsx"
    ],
    "spec": [
      "test/**/*.*"
    ],
    "watch-files": [
      "test/**/*.*",
      "src/**/*.*"
    ],
    "timeout": 1000000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ekoulemaneng/openapi-io-validator.git"
  },
  "bugs": {
    "url": "https://github.com/ekoulemaneng/openapi-io-validator/issues"
  },
  "homepage": "https://github.com/ekoulemaneng/openapi-io-validator#readme"
}
